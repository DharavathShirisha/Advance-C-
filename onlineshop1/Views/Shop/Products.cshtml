@model List<onlineshop1.Models.product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>

<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-md-4">
            <img src="/@i.pimage" />
            <div>@i.pid</div>
            <div>@i.pname</div>
            <div>@i.price</div>
            <div>@i.description</div>

            <div><a href="buy?pid=@i.pid" class="btn btn-info">Buy Now</a></div>
        </div>
    }
</div>
